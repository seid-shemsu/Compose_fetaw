<?xml version="1.0" encoding="utf-8" ?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350.0dip"
    android:layout_height="wrap_content"
    android:minWidth="350.0dip"
    android:padding="15.0dip"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="20.0sp"
        android:layout_marginRight="5.0dip"
        android:layout_marginBottom="20.0sp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10.0dip"
            android:text="Log In"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="18.0sp"
            android:textStyle="bold" />

        <View
            android:layout_width="100.0dip"
            android:layout_height="1.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5.0dip"
            android:background="@color/blue" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phone_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="25.0dip"
            android:layout_marginRight="20.0dip"
            android:hint="phone"
            android:visibility="gone"
            app:startIconDrawable="@drawable/ic_baseline_phone_24"
            app:startIconTint="@color/blue">

            <EditText
                android:id="@+id/phone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textColorHint="@color/light_gray" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/code_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="15.0dip"
            android:layout_marginRight="20.0dip"
            android:enabled="false"
            android:hint="code"
            android:visibility="gone"
            app:startIconDrawable="@drawable/ic_baseline_dialpad_24"
            app:startIconTint="@color/blue">

            <EditText
                android:id="@+id/code"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/light_gray" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="25.0dip"
            android:layout_marginRight="20.0dip"
            android:hint="display name (Muhammed)"
            android:visibility="visible"
            app:startIconDrawable="@drawable/person"
            app:startIconTint="@color/blue">

            <EditText
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/light_gray" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/send_code_card"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="35.0dip"
            android:layout_marginRight="20.0dip"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="7.0dip"
            app:cardElevation="10.0dip">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/send_code_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18.0sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@id/cancel_card"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="15.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginBottom="15.0dip"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="7.0dip"
            app:cardElevation="10.0dip">

            <TextView
                android:id="@id/cancel_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="18.0sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Or login with"
            android:textAlignment="center"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15.0dip"
            android:layout_marginBottom="15.0dip"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:text="Google"
                android:textColor="@color/black"
                android:textSize="18.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:text="Facebook"
                android:textColor="@color/black"
                android:textSize="18.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:text="Twitter"
                android:textColor="@color/black"
                android:textSize="18.0sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
